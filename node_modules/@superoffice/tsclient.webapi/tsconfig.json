{
	"compileOnSave": false,
	"compilerOptions": {
		"noEmitOnError": true,
		"listEmittedFiles": false,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": false,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"importHelpers": true,
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2017",
			"es2015.promise",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist/**/*"
	]
}